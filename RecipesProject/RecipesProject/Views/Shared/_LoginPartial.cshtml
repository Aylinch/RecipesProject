@using Microsoft.AspNetCore.Identity
@using RecipesProject.Data.Account
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav" style="height: 41.6px;">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-pink" asp-controller="Account" asp-action="EditProfile" title="Manage">Hello, @User.Identity?.Name!</a>
    </li>
    <li class="nav-item" style="display: flex;align-content: center;flex-direction: column-reverse;margin-top: 3rem;">
        <form  class="nav-link text-pink" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-pink" style="font-weight: 400">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-pink" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-pink" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
