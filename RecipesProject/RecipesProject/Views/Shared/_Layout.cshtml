<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecipesProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RecipesProject.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" />

</head>
<body>
    <header class="position-sticky top-0">
        <nav class="navbar navbar-expand-sm navbar-light bg-white navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid justify-content-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/navbarimage/carmie-s-kitchen-recipe-picture.webp" alt="RecipesProject Logo" class="img-fluid navbar-brand-img">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Recipe" asp-action="AllRecipes">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Category" asp-action="AllCategories">Category</a>
                        </li>
                         @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Recipe" asp-action="AddRecipe">Add</a>
                            </li>
                        }
                        <li class="nav-item">
                            @if (User.Identity!.IsAuthenticated && (User.IsInRole("Admin")))
                            {
                                <a class="nav-link text-pink fw-bold" asp-area="Admin" asp-controller="Recipes" asp-action="Index">Admin</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.Identity!.IsAuthenticated && !User.IsInRole("Admin"))
                            {
                                <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Recipe" asp-action="GetUserRecipes">My recipes</a>
                            }
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
            <style>
                body {
                    background-color:;
                }
            </style>
        </main>
    </div>

    <footer class="border-top text-white p-3">
        <div class="container mt-2">
            <div class="row">
                <div class="col-sn-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>Recipe Application</h4>
                </div>
                <div class="col-sn-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>Contact us</h4>
                    <div class="mt-3 mb-2">
                        <span><i class="fa-brands fa-instagram fs-5"></i></span>
                        <span class="fs-6 mx-1">Instagram</span>
                    </div>
                    <div class="mb-2">
                        <span><i class="fa-brands fa-facebook fs-5"></i></span>
                        <span class="fs-6 mx-1">Facebook</span>
                    </div>
                    <div class="mb-2">
                        <span><i class="fa-brands fa-whatsapp fs-5"></i></span>
                        <span class="fs-6 mx-1">Whatsapp</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
