@model RecipesProject.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row shadow rounded">
        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="rounded text-center">
                <img src="~/images/registerandloginimage/image.jpg" class="img-fluid rounded" alt="Thali" style="max-width: 60%; height: auto;" />
            </div>
        </div>
        <div class="col-lg-6">
            <form autocomplete="off" method="post" class="m-3 p-3">
                <div class="mb-4">
                    <h2 class="text-pink fst-italic">Register</h2>
                    <span class="fst-italic text-muted">Create your account</span>
                </div>
                <div class="mb-3">
                    @Html.ValidationSummary()
                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                        <label asp-for="FirstName">First Name</label>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                        <label asp-for="LastName">Last Name</label>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name" })
                        <label asp-for="UserName">User Name</label>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", placeholder = "Age" })
                        <label asp-for="Age">Age</label>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        <label asp-for="Email">Email</label>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "Password" })
                        <label asp-for="Password">Password</label>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", type = "Password" })
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                    </div>
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-danger btn-lg" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>