@model RecipesProject.Models.RecipeViewModels.FilterViewModel
<form asp-controller="Recipe" asp-action="Filter" method="get" class="my-4">

    <div class="mb-3">
        <label>Time for cooking:</label><br>
        <div class="form-check form-check-inline">
            <input asp-for="@Model.TimeFilter" class="form-check-input" type="radio" id="fast" value="fast">
            <label class="form-check-label" for="short">Fast</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="@Model.TimeFilter" class="form-check-input" type="radio" id="medium" value="medium">
            <label class="form-check-label" for="medium">Medium</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="@Model.TimeFilter" class="form-check-input" type="radio" id="slow"  value="slow">
            <label class="form-check-label" for="long">Slow</label>
        </div>
    </div>
    
    <div class="mb-3">
        <label>Meals:</label><br>
        <div class="form-check form-check-inline">
            <input asp-for="@Model.IngredientFilter" class="form-check-input" type="radio" id="chicken" value="chicken">
            <label class="form-check-label" for="chicken">Chicken</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="@Model.IngredientFilter" class="form-check-input" type="radio" id="pork" value="pork">
            <label class="form-check-label" for="pork">Pork</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="@Model.IngredientFilter" class="form-check-input" type="radio" id="beef" value="beef">
            <label class="form-check-label" for="beef">Beef</label>
        </div>
         <div class="form-check form-check-inline">
            <input asp-for="@Model.IngredientFilter" class="form-check-input" type="radio" id="pasta" value="pasta">
            <label class="form-check-label" for="pasta">Pasta</label>
        </div>
    </div>
    
    <div class="mb-3">
        <label for="servings">Number of servings:</label>
        <input asp-for="@Model.ServingsFilter" type="number" id="servings" class="form-control" value="@Model.ServingsFilter" />
    </div>
    

    <button type="submit" class="btn btn-success">Apply filters</button>

    <div class="mb-3"></div>
</form>