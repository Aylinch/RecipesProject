<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/admin-index.css" />
@model IEnumerable<RecipesProject.Data.Entities.Recipe>
@{
    ViewData["Title"] = "Index";
    Layout = "../Shared/_Layout.cshtml";
}

<body>
    <div class="container-fluid">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Recipes</b></h2>
                    </div>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Total time</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis;">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalTime)min
                            </td>
                            <td>
                                <img src="@Url.Content(item.Image)" alt="Recipe Image" style="max-width: 200px; max-height: 200px;" />
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Recipes", new { id = item.Id })" class="edit" data-toggle="modal">
                                    <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                                </a>

                                <a href="@Url.Action("Delete", "Recipes", new{id=item.Id})" class="delete" data-toggle="modal">
                                    <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                                </a>

                                <a href="@Url.Action("Details", "Recipes", new{id=item.Id})" class="accept" data-toggle="modal">
                                    <i class="material-icons" data-toggle="tooltip" title="Accept">&#xE5CA;</i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <form action="/Home/Index" method="get">
                <button type="submit" class="btn btn-primary btn-success">Go to home page</button>
            </form>
        </div>
    </div>
</body>