@model RecipesProject.Data.Entities.Recipe
@{
    ViewData["Title"] = "Details";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Recipe Details</h1>

    <div class="confirmation-message">
        <h3>Do you want to accept this recipe?</h3>
        <div class="accept-form">
            <form  asp-area="Admin" asp-action="ApproveRecipe" asp-controller="Recipes" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-success">Accept</button>
            </form>
        </div>
    </div>

    <div class="recipe-details">
        <h4>Recipe Details</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">Title:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-2">Description:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-2">Instructions:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Instructions)</dd>

            <dt class="col-sm-2">Preparation Time:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PrepTime) min</dd>

            <dt class="col-sm-2">Cook Time:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CookTime) min</dd>

            <dt class="col-sm-2">Total Time:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.TotalTime) min</dd>

            <dt class="col-sm-2">Servings:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Servings)</dd>

            <dt class="col-sm-2">Category:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Category!.Name)</dd>

            <dt class="col-sm-2">Image:</dt>
            <dd class="col-sm-10"><img src="@Html.DisplayFor(model => model.Image)" alt="Recipe Image" style="max-width: 200px; height: auto;" /></dd>
        </dl>
    </div>
</div>